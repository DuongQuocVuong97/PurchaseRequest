        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_purchaseordered"/>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
        </record>


    </data>


</odoo>