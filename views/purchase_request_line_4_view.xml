<odoo>
    <record id="purchase_request_line_view_tree_activity_4" model="ir.ui.view">
        <field name="name">purchase.request.4.tree.activity</field>
        <field name="model">purchase.request.line.4</field>
        <field name="arch" type="xml">
            <tree string="Chi tiết">
                <field name="product_id"/>
                <field name="product_uom_id"/>
                <field name="request_quantity"/>
                <field name="estimated_unit_price"/>
                <field name="estimated_subtotal"/>
                <field name="due_date"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="purchase_request_line_view_form_4" model="ir.ui.view">
        <field name="name">purchase.request.4.form</field>
        <field name="model">purchase.request.line.4</field>
        <field name="arch" type="xml">
            <form string="Chi tiết" delete="false">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="product_uom_id"/>
                        <field name="request_quantity"/>
                        <field name="estimated_unit_price"/>
                        <field name="estimated_subtotal"/>
                        <field name="due_date"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="purchase_request_line_action_4" model="ir.actions.act_window">
        <field name="name">Purchase request line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request.line.4</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="purchase_request_line_menu_4"
              parent="purchase_request_menu_root_4"
              name="Purchase request line"
              action="purchase_request_line_action_4"/>
</odoo>